{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**"],
      "env": [
        "NODE_ENV",
        "PORT",
        "DB_HOST",
        "DB_PORT",
        "DB_NAME",
        "DB_USER",
        "DB_PASSWORD",
        "JWT_SECRET",
        "JWT_EXPIRES_IN",
        "DIRECTADMIN_URL",
        "DIRECTADMIN_USERNAME",
        "DIRECTADMIN_PASSWORD",
        "CORS_ORIGIN"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "env": [
        "NODE_ENV",
        "PORT",
        "DB_HOST",
        "DB_PORT",
        "DB_NAME",
        "DB_USER",
        "DB_PASSWORD",
        "JWT_SECRET",
        "JWT_EXPIRES_IN",
        "DIRECTADMIN_URL",
        "DIRECTADMIN_USERNAME",
        "DIRECTADMIN_PASSWORD",
        "CORS_ORIGIN"
      ]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NODE_ENV",
        "PORT",
        "DB_HOST",
        "DB_PORT",
        "DB_NAME",
        "DB_USER",
        "DB_PASSWORD",
        "JWT_SECRET",
        "JWT_EXPIRES_IN",
        "DIRECTADMIN_URL",
        "DIRECTADMIN_USERNAME",
        "DIRECTADMIN_PASSWORD",
        "CORS_ORIGIN"
      ]
    }
  }
}
