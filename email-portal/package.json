{
  "name": "email-portal",
  "version": "1.0.0",
  "private": true,
  "description": "A web application that provides a self-service portal for customers to request and manage email accounts across multiple domains, integrated with DirectAdmin control panel.",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "seed:admin": "turbo run seed:admin --filter=backend",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build"
  },
  "devDependencies": {
    "turbo": "^2.5.6"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  },
  "packageManager": "npm@8.19.2"
}